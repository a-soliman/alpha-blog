<div class="row d-flex justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", resource: @category %>

    <%= form_with(model: @category, class: "shadow rounded p-3 py-4 mb-3 bg-info", local: true) do |f| %>
      <div class="form-group row mb-3">
        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %><br />
        <div class="col-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a category name" %>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit(@category.new_record? ? "Create category" : "Update category", class: "btn btn-outline-light btn-lg") %>
      </div>
    <% end %>
  </div>
</div>