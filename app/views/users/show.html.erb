<%= render "shared/page_title", title: "#{@user.username}'s profile" %>
<div class="text-center">

<div class="card mb-5 bg-dark text-light" style="width: 30rem; margin: auto;">
  <div class="card-header">
    @<%= @user.username %>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-8 text-start">
        <h5 class="card-title">Bio</h5>
        <p class="card-text"><%= @user.bio %></p>
        <%= mail_to @user.email, class: "btn-primary" %> 
      </div>
      <div class="col-4">
        <%= gravatar_for @user %>
      </div>
    </div>
  </div>
</div>

<h3>Articles</h3>

<% @user.articles.each do |article| %>
  <%= render "articles/article",  article: article%>
<% end %>

</div>