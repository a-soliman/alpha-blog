
<%= render "shared/page_title", title: "Sign up for Alpha Blog" %>

<div class="row d-flex justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", resource: @user %>

    <%= form_with(model: @user, class: "shadow rounded p-3 py-4 mb-3 bg-info", local: true) do |f| %>
      <div class="form-group row mb-3">
        <%= f.label :username, class: "col-2 col-form-label text-light" %><br />
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= f.label :email, class: "col-2 col-form-label text-light" %><br />
        <div class="col-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= f.label :password, class: "col-2 col-form-label text-light" %><br />
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
</div>