<% if  @article && @article.errors.any? %>
  <div class='errors'>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row d-flex justify-content-center">
  <div class="col-10">
    <%= form_with(model: @article, class: "shadow rounded p-3 py-4 mb-3 bg-info", url: url, method: method, local: true) do |f| %>
      <div class="form-group row mb-2">
        <%= f.label :title, class: "col-2 col-form-label text-light" %><br />
        <div class="col-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
        </div>
      </div>

      <div class="form-group row mb-4">
        <%= f.label :description, class: "col-2 col-form-label text-light" %><br />
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>
        </div>
      </div>

      <div class="form-group text-center">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
  <%= render "back_link" %>
</div>
